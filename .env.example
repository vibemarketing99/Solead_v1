# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=solead
DATABASE_USER=solead_user
DATABASE_PASSWORD=your_secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
KMS_KEY_ID=your-kms-key-id

# Stagehand Configuration
STAGEHAND_ENV=LOCAL
STAGEHAND_HEADLESS=true
STAGEHAND_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-api-key
# Alternative: Use Claude
# STAGEHAND_MODEL=claude-3-sonnet
# ANTHROPIC_API_KEY=your-anthropic-api-key

# AWS Configuration (for S3 screenshots)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=solead-screenshots

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Worker Configuration
WORKER_CONCURRENCY=5
MAX_STAGEHAND_INSTANCES=10
JOB_RETRY_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=info